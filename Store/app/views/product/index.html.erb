<%= link_to '<button class="btn btn-primary" type="button">Sort by name</button>'.html_safe, product_index_path(:order => 'product_name ASC') %>
<%= link_to '<button class="btn btn-primary" type="button">Sort by likes</button>'.html_safe, product_index_path(:order => 'likes_count DESC') %>
<div class="col-xs-12 col-md-8"></div>
<div class="col-xs-12 col-md-3">
<%= form_tag(product_index_path, method: :get) do %>
<%= text_field_tag :term, params[:term], class: "form-control" %>
</div>
<div class="actions">
  <%= submit_tag 'Search', name: nil, class: "btn btn-primary" %>
</div>

<% end %>
<br>
<br>
<div id="products" class="row list-group">
<%  @product.each do |prod| %>
  <div class="item  col-xs-4 col-lg-4">
    <div class="thumbnail">
      <div class="caption">
        <h4 class="group inner list-group-item-heading"><%= prod.product_name %>     <span style="text-align:right;"><a class='far fa-thumbs-up' href="" style='font-size:24px'></a></span></h4>
        <p class="group inner list-group-item-text">Category: <%= prod.category.name %></p>
        <div class="row">
          <div class="col-xs-12 col-md-6">
            <p class="lead"><%= number_to_currency prod.price %></p>
          </div>
          <div class="col-xs-12 col-md-6">
            <a href="#" class="btn btn-success btn-block">Add to cart</a>
          </div>
        </div>
      </div>
    </div>
  </div>
<% end %>
</div>
</div>
<div class="apple_pagination">
<div class="page_info">
<%= page_entries_info @product %>
</div>
<%= will_paginate @product, :container => false %>
</div>
