<%if user_signed_in?%>
  <div class="col-sm-10">
    <%= form_for @comment, :url => user_comments_url(@user), :method => :post do |form| %>
    <div class="field" style="width: 50%">
      <%= form.text_area :review, :cols => 60, :rows => 4, style: "color: 	#000000;"%>
    </div>
    <div class="actions">
      <%= form.submit style: "color: 	#000000;"%>
    </div>
  <%end%>
</div>
<%end%>
</div>
