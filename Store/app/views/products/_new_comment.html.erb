<%if user_signed_in?%>
  <div class="col-sm-10">
    <%= form_for @comment, :url => product_comments_url(@product), :method => :post do |form| %>
    <div class="field" style="width: 50%">
      <%= form.text_area :review, :cols => 60, :rows => 4 %>
    </div>
    <div class="actions">
      <%= form.submit %>
    </div>
  <%end%>
</div>
<%end%>
