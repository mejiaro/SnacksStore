<%if user_signed_in? && !current_user.admin? && !@user.admin?%>
<div class="col-md-2"></div>
<div style="width:60%;" class="col-md-12">
<h2 style="color: blue;">
  New Comment:
</h2>
  <div class="col-sm-10">
    <%= form_for @comment, :url => user_comments_url(@user), :method => :post do |form| %>
    <div class="field" style="width: 50%">
      <%= form.text_area :review, :cols => 60, :rows => 4, style: "color: 	#000000;", :required => true%>
    </div>
    <div class="actions">
      <%= form.submit style: "color: 	#000000;"%>
    </div>
  <%end%>
</div>
<%end%>
</div>
